<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim60"
        android:layout_marginRight="@dimen/dim60"
        android:background="@drawable/backgroud_white_8px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/dim40"
            android:text="发现新版本"
            android:textColor="@color/c333333"
            android:textSize="@dimen/txt32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/upContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dim20"
            tools:text="更新内容" />

        <View style="@style/line_all_style" />

        <LinearLayout
            android:id="@+id/upVersionLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim88"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noUpVersion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下次再说"
                android:textColor="@color/adadad"
                android:textSize="@dimen/txt34" />

            <View style="@style/line_all_style" />

            <TextView
                android:id="@+id/upVersion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/c1c1c1d"
                android:textSize="@dimen/txt34" />
        </LinearLayout>

        <TextView
            android:id="@+id/upVersionForce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim88"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt34" />
    </LinearLayout>


</layout>
