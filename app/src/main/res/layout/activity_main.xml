<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.dwz.library.common.FragmentTabMenuView
                android:id="@+id/tabmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ffffff"
                android:clipToPadding="false"
                app:bgColor="@color/ffffff"
                app:bottomPadding="5dp"
                app:checkedTextColor="@color/ff4a3c"
                app:menuSize="10sp"
                app:normalTextColor="@color/c1c1c1d"
                app:tabMenuHeight="49dp"
                app:topPadding="5dp" />
            <include
                android:id="@+id/noNetView"
                android:visibility="gone"
                layout="@layout/layout_no_netword"/>
        </FrameLayout>
    </LinearLayout>


</layout>