<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="model"
        type="library.commonModel.DialogModel"/>
</data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:background="@drawable/backgroud_white_8px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txSharePhoneTitle"
            android:paddingTop="@dimen/dimen_25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c333333"
            android:gravity="center"
            android:textSize="@dimen/text_size_17"
            android:ellipsize="end"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="@{model.dialongTitle}"/>
        <TextView
            android:paddingTop="@dimen/dimen_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_27dp"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_13"
            android:text="@{model.dialogContent}"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txCancelChangeName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{model.dialogCancel}"
                android:gravity="center"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/c333333"
                android:layout_weight="1"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="#ebebeb"/>
            <TextView
                android:id="@+id/txSureChangeName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{model.dialogSure}"
                android:gravity="center"
                android:textSize="@dimen/text_size_17"
                android:background="#f38017"
                android:textColor="@color/ffffff"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</layout>